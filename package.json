{
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "web:dev": "pnpm --filter @boilerplate/web dev",
    "web:build": "pnpm --filter @boilerplate/web build",
    "web:start": "pnpm --filter @boilerplate/web start",
    "web:lint": "pnpm --filter @boilerplate/web lint",
    "web:type-check": "pnpm --filter @boilerplate/web type-check",
    "db:studio": "pnpm --filter @boilerplate/web db:studio",
    "db:migrate": "pnpm --filter @boilerplate/web db:migrate",
    "db:generate": "pnpm --filter @boilerplate/web db:generate",
    "db:reset": "pnpm --filter @boilerplate/web db:reset",
    "db:seed": "pnpm --filter @boilerplate/web db:seed"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2"
  }
}