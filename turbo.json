{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "BETTER_AUTH_SECRET",
    "VERCEL_ENV",
    "VERCEL_GIT_COMMIT_REF",
    "VERCEL_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**", 
        "!.next/cache/**", 
        ".next/standalone/**",
        ".next/static/**",
        "dist/**"
      ],
      "env": [
        "NODE_ENV", 
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "VERCEL_ENV",
        "VERCEL_GIT_COMMIT_REF"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "DATABASE_URL", "BETTER_AUTH_SECRET"]
    },
    "start": {
      "dependsOn": ["build"],
      "env": ["NODE_ENV"]
    },
    "lint": {
      "outputs": []
    },
    "type-check": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "test:ci": {
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "DATABASE_URL", "CI"]
    },
    "test:unit": {
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:integration": {
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "test:e2e": {
      "outputs": ["playwright-report/**"],
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "clean": {
      "cache": false
    }
  }
}
