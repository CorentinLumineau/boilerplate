# Environment configuration for monorepo deployment
NODE_ENV=production

# Frontend URL (for CORS configuration)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Backend URL (for API calls from frontend)
BACKEND_URL=https://your-backend-app.vercel.app

# Database
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5432/auth_db

# Better Auth
BETTER_AUTH_SECRET=your-32-character-secret-key-here
BETTER_AUTH_BASE_URL=http://localhost:3101

# Frontend URL for auth redirects
NEXT_PUBLIC_APP_URL=http://localhost:3100
NEXT_PUBLIC_API_URL=http://localhost:3101

# Social Providers (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=